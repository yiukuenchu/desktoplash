{
    "manifest_version": 2,
    "name": "desktoplash",
    "description": "非官方Unsplash图片获取插件",
    "version": "1.0",
  
    "permissions": [
        "activeTab",
        "declarativeContent",
        "storage",
        "background"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
      },
    "browser_action": {
      "default_icon": {
        "16": "images/icon16.png",
        "32": "images/icon32.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
        },
      "default_popup": "popup.html"
    },
    "icons": {
        "16": "images/icon16.png",
        "32": "images/icon32.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    }
  }